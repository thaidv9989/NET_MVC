@model CRUD_D1.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center fw-bolder bg-light">Edit Category</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category_Id" />
            <div class="form-group row">
                <label asp-for="Category_Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Category_Name" class="form-control" />
                </div>
                <span asp-validation-for="Category_Name" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
