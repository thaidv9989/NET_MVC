@model CRUD_D1.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center fw-bold bg-light">Create Category</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category_Name" class="col-sm-2 col-form-label">Category Name</label>
                
                <input asp-for="Category_Name" class="form-control" />
                
                <span asp-validation-for="Category_Name" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
